@using BEL.ItemCodeCreationPreProcess.Models.Master
@model List<ChangeApproverMaster>

<div id="changeapproverfrommodel">
    @*<h4>
        @Html.ResourceValue("Page_Title", ResourceName.ChangeApproverForm)
    </h4>*@
    
        <table class="table table-hover table-bordered someTable" id="changeapprovertable">
            <thead>
                <tr>
                    <th class="hidden">ID</th>                    
                    <th width="20%">@Html.ResourceValue("Grid_Title_RoleName", ResourceName.ChangeApproverForm)</th>
                    <th width="30%">@Html.ResourceValue("Grid_Title_PendingWithWhom", ResourceName.ChangeApproverForm)</th>
                    <th width="30%">@Html.ResourceValue("Grid_Title_ReplaceByWhom", ResourceName.ChangeApproverForm)</th>
                    <th width="10%">@Html.ResourceValue("Grid_Title_JobStatus", ResourceName.ChangeApproverForm)</th>
                    <th width="10%">@Html.ResourceValue("Grid_Title_Action", ResourceName.Common)</th>
                </tr>
            </thead>
            <tbody id="changeapprovertbody">
                @if (Model != null && Model.Count() > 0)
            {
                foreach (ChangeApproverMaster item in Model)
                {
                        <tr>
                            <td class="hidden">@item.ID</td>
                            <td width="20%">@item.RoleName</td>
                            <td width="30%">@item.PendingWithWhom</td>
                            <td width="30%">@item.ReplaceByWhom</td>
                            <td width="10%">@item.JobStatus</td>
                            <td width="10%">
                                @if (item.JobStatus == "No")
                            {
                                    <a class="btn ink-reaction btn-floating-action" data-ajax="true" data-ajax-loading="#loading" data-ajax-method="GET" data-ajax-mode="replace" data-ajax-update="#addeditapproverreplacement" href="@Url.Action("GetApproverReplacementApproverById", "ICDMApprover", new { id = @item.ID })">
                                        <i class='fa fa-edit'></i>
                                    </a>
                                    <a class="btn ink-reaction btn-floating-action btn-danger" onclick="ApproverReplacementDelete('@item.ID');">
                                        <i class='fa fa-trash-o'></i>
                                    </a>
                            }
                            </td>
                        </tr>

                }
            }
                @*else
                    {
                        <tr>
                            <td colspan="5" class="text-center text-danger" id="nodata">
                                @Html.ResourceValue("Grid_Text_NoData", ResourceName.Common)
                            </td>
                        </tr>
                    }*@
            </tbody>
        </table>
    
</div>

